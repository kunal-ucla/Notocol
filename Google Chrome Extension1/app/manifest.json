{
    "manifest_version": 2,
    "name": "Chimpu",
    "version": "0.1",
    "description": "Your Smart Study Assistant",
    "background": {
        "scripts": [ "js/background.js" ]
    },


    "browser_action": {
        "default_icon": "img/borncoder.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "bookmarks",
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab"
        //is there any security problem if we add "<all_urls>" ???
    ],

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "exclude_matches": ["https://www.google.co.in/maps/"],
            "css": ["css/jquery-ui.css", "css/annotator.min.css"],
            "js": ["js/jquery.min.js", "js/jquery-ui.min.js", "js/annotator-full.min.js", "js/annotate.js"]
        }
    ],

    "web_accessible_resources": [
        "*.html", "js/*.js", "css/*.css"
        ]
}
